source 'https://rubygems.org'
ruby '3.1.4'

gem 'puma', '~> 5.6.7'                                  # Latest heroku webserver
gem 'rails', '~> 6.1.7.4'                               # for ruby on rails (vs ruby on sinatra)

# environment gems (front & backend, admin, db, etc.)
gem 'activeadmin', '~> 2.12.0'                          # *The* way to build admin backend
gem 'activeadmin-select2', '~> 0.1.8'                   # Incorporate Select2 JQuery into ActiveAdmin.
gem 'country_select', '~> 3.1.1'                        # Provides a helper to get an HTML select list of countries
gem 'devise', '4.8.0'                                   # Flexible authentication solution for Rails with Warden
gem 'devise_account_expireable', '~> 0.0.2'             # Adds account expiration capability to devise
gem 'email_check', '~> 1.0'                             # Allows you to block free/disposable email providers
gem 'email_validator', '1.6.0'                          # For correct input data in email field
gem 'faker', '~> 2.13'                                  # Easy way to add fake data: names, email addresses, etc.
gem 'font_assets', '~> 0.1.14'                          # Improve font serving
gem 'google-authenticator-rails', '~> 3.1.0'            # Add the ability to use the Google Authenticator with ActiveRecord.
gem 'hstore-attributes', '~> 0.0.4'                     # ActiveRecord meta attributes that are mapped to hstore columns
gem 'httparty', '~> 0.21.0'                             # Makes consuming restful web services dead easy.
gem 'iso_countries_plus', '~> 0.2.0'                    # Allows VERY flexible countries name lookups
gem 'jquery-rails', '~> 4.6', '>= 4.6.0'                # jQuery and the jQuery-ujs driver for your Rails 4+ application
gem 'jquery-ui-rails', '~> 6.0', '>= 6.0.1'             # jQuery UI's JavaScript, CSS, and image files packaged
gem 'jwt', '~> 2.7'                                     # A pure ruby implementation of the RFC 7519 OAuth JSON Web Token (JWT) standard.
gem 'license', '~> 0.6.2'                               # A honor-based license key generator
gem 'pg', '~> 1.3.3'                                    # Postgres gem
gem 'recaptcha', '~> 5.2', '>= 5.2.1'                   # Helpers for the reCAPTCHA API
gem 'sassc', '~> 2.4'
gem 'sassc-rails', '~> 2.1.2'                           # Integrate SassC-Ruby into Rails.
gem 'shakapacker', '7.0.3'                              # The successor of webpack, shakapacker is used to manage app-like JavaScript modules in Rails
gem 'sprockets', '~> 3.7', '>= 3.7.2'                   # Sprockets is a Rack-based asset packaging system that concatenates and serves JavaScript, CoffeeScript, CSS, Sass, and SCSS.
gem 'sprockets-rails', '~> 3.4', '>= 3.4.2'             # Sprockets Rails integration
gem 'touchpunch-rails', '~> 1.0.3'                      # Touch Event Support for jQuery UI
gem 'virtus', '~> 2.0.0'                                # Allows to define attributes on classes, modules or classes

# javascript gems
gem 'coffee-rails', '~> 5.0', '>= 5.0.0'                # CoffeeScript adapter for the Rails asset pipeline.
gem 'cookies_eu', '~> 1.7', '>= 1.7.8'                  # Displays a cookie consent
gem 'jquery-datatables-rails', '~> 3.4.0'               # jquery datatables for rails
gem 'json', '~> 2.6.1'                                  # This is a JSON implementation as a Ruby extension in C.
gem 'modernizr-rails', '~> 2.7.1'                       # js cleanup and compression
gem 'qtip2-jquery-rails', '~> 2.2.100'                  # Provides the qTip2 jQuery plugin packaged for the Rails assets
gem 'uglifier', '~> 4.1'                                # Ruby wrapper for UglifyJS JavaScript compressor.

# look and feel (doc uploads, image views, etc.)
gem 'activeadmin_quill_editor', '~> 1.1.0'              # An Active Admin plugin to use Quill Rich Text Editor
gem 'bourbon', '~> 7.2.0'                               # sass library mixin by thoughtbot - for use with neat & refills
gem 'carrierwave', '~> 2.2.5'                           # For file attachments - works with fog and cloudinary
gem 'cloudinary', '~> 1.27'                             # For CDN image support - works with carrierwave
gem 'draper', '~> 4.0.2'                                # adds an object-oriented layer of presentation logic to
gem 'font-awesome-rails', '~> 4.7.0.8'                  # required for font-awesome icons
gem 'gravatar_image_tag', '~> 1.2'                      # Easy way of getting gravatar images
gem 'highcharts-rails', '~> 6.0.3'                      # includes Highcharts as part of the asset pipeline
gem 'inline_svg', '~> 1.7.2'                            # Get an SVG into your view and then style it with CSS.
gem 'mini_magick', '~> 4.9.5'                           # A ruby wrapper for ImageMagick or GraphicsMagick command line
gem 'nokogiri', '~> 1.14.3'                             # an HTML, XML, SAX, and Reader parser
gem 'normalize-rails', '~> 4.1.1'                       # makes browsers render all elements more consistently
gem 'render_csv', '~> 2.0.0'                            # Adds a custom CSV renderer to Rails applications
gem 'reverse_markdown', '~> 2.0'                        # Map simple html back into markdown, e.g. if you want to import existing html data in your application.
gem 'select2-rails', '~> 4.0.3'                         # replacement for select boxes
gem 'sweetalert-rails', '~> 1.1.3'                      # This gem provides SweerAlert for your Rails application.
gem 'thor', '~> 1.0'
gem 'wicked_pdf', '2.6.3'                               # Uses wkhtmltopdf to create PDFs using HTML
gem 'wkhtmltopdf-binary', '0.12.3.1'                    # PDF support

# monitoring
gem 'barnes', '~> 0.0.9'                                # Report GC usage data to StatsD
gem 'browsernizer', '~> 0.2.4'                          # Browser detection and redirection for unsupported browsers
gem 'mixpanel-ruby', '~> 2.2.2'                         # The official Mixpanel tracking library for ruby
gem 'postmark-rails'                                    # Postmark email delivery - because Sendgrid sucks!
gem 'rack-attack', '~> 5.4.2'                           # A rack middleware for throttling and blocking abusive requests
gem 'rest-client', '~> 2.1.0'                           # A simple HTTP and REST client for Ruby
gem 'sidekiq', '~> 6.5.10'                              # Simple, efficient background processing for Ruby.
gem 'simple_calendar', '~> 2.4.3'                       # A simple Rails calendar
gem 'stripe', '~> 5.55.0'                               # Stripe is the easiest way to accept payments online
gem 'trycourier', '~> 1.0.1'                            # Courier is the smartest way to design & deliver notifications
gem 'useragent', '~> 0.16.10'                           # A library that parses and compares HTTP MyUser Agents

group :staging, :production, :admin do
  gem 'premailer-rails', '~> 1.12.0'                    # for styling HTML emails with CSS without any configuration
  gem 'puma_worker_killer', '~> 0.3.1'                  # A rolling restart will kill each of your puma workers
  gem 'rack-cors', '~> 1.1.1'                           # Also helps with Cloudfront fonts: https://singlebrook.com/2012/10/02/cloudfront-cdn-with-rails-on-heroku/
  gem 'rails_12factor', '~> 0.0.3'                      # Helps speed up deploys on heroku
end

group :development, :test do
  gem 'awesome_print', '~> 1.9.2'                       # Nicely formatted data structures in console
  gem 'benchmark-ips', '~> 2.8.3'                       # An iterations per second enhancement to Benchmark.
  gem 'bullet', '~> 6.1'                                # help to kill N+1 queries and unused eager loading.
  gem 'byebug', '~> 10.0.2'                             # Byebug is a Ruby 2 debugger
  # WARNING!!! To avoid rubocop warnings do NOT update the gem below.
  gem 'factory_bot_rails', '~> 6.2.0'                   # Test data generator -- see spec/factories.rb
  gem 'json_spec', '~> 1.1.5'                           # RSpec matchers for testing JSON content
  gem 'rails-controller-testing', '~> 1.0.5'
end

group :development do
  gem 'annotate', '~> 3.2'                              # Annotates Rails/ActiveRecord Models, routes, fixtures
  gem 'better_errors', '~> 2.9.1'                       # More detailed information about errors
  gem 'dotenv-rails', '~> 2.8.0'                        # Autoload dotenv in Rails to override ENV variables
  gem 'flatten_migrations', '~> 0.0.1'                  # deletes existing migrations and generates initial one
  gem 'git-smart', '~> 0.1.10'                          # Makes working with git smarter (git smart-pull, etc.)
  gem 'letter_opener', '~> 1.7.0'                       # Letter Opener will open a preview in the browser
  gem 'letter_opener_web', '~> 2.0.0'                   # GUI for letter_opener
  gem 'rubocop', '~> 1.3.1'                             # Automatic Ruby code style checking tool
end

group :test do
  gem 'capybara', '~> 3.36.0'                           # for natural language testing
  gem 'cucumber', '~> 3.1', '>= 3.1.2'                  # Behaviour Driven Development with elegance and joy
  gem 'cucumber-rails', '~> 2.5', '>= 2.5.1', require: false # Cucumber Generator and Runtime for Rails
  gem 'database_cleaner', '~> 1.8.5'                    # database_cleaner is not required, but highly recommended
  gem 'rspec-expectations', '~> 3.9', '>= 3.9.2'        # for define expected outcomes.
  gem 'rspec-rails', '~> 6.0.4'                         # rspec-rails is a testing framework for Rails 5+.
  gem 'rspec-virtus', '~> 1.0.2'                        # Simple RSpec matchers for Virtus objects
  gem 'rubocop-rspec', '~> 2.0.0'                       # Code style checking for RSpec files
  gem 'selenium-webdriver', '~> 4.0'                    # for browser tests
  gem 'shoulda-matchers', '~> 4.3'                      # Collection of testing matchers extracted from Shoulda
  gem 'simplecov', '~> 0.16.1'                          # Warning on circleci.com
  gem 'stripe-ruby-mock', '3.1.0.rc3', require: 'stripe_mock' # A library to test stripe without hitting their servers
  gem 'webmock', '~> 3.8.3'                             # WebMock allows stubbing HTTP requests
end
